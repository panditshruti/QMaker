<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.shrutipandit.qmaker.uiFragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_enterQuestionFragment3"
            app:destination="@id/enterQuestionFragment3" />
    </fragment>
    <fragment
        android:id="@+id/enterQuestionFragment3"
        android:name="com.shrutipandit.qmaker.uiFragment.EnterQuestionFragment"
        android:label="fragment_enter_question"
        tools:layout="@layout/fragment_enter_question" >
        <action
            android:id="@+id/action_enterQuestionFragment_to_questionDetailsFragment"
            app:destination="@id/questionDetailsFragment" />
        <argument
            android:name="question"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/questionDetailsFragment"
        android:name="com.shrutipandit.qmaker.uiFragment.QuestionDetailsFragment"
        android:label="fragment_question_details"
        tools:layout="@layout/fragment_question_details" >
        <argument
            android:name="question"
            app:argType="string" />
    </fragment>
</navigation>